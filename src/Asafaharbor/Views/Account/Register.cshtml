@using System.Collections.Generic
@using Asafaharbor.Web.HTMLExtensions
@using Nancy.Validation;

@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>

@{
    Layout = "_Layout.cshtml";
}

<div class="small-8 small-offset-2">
    <div class="row">
        <form method="POST">
            <fieldset>
                <legend>Register</legend>
                <div class="row">
                    <div class="small-3 columns">
                        <label for="Name" class="right inline">Name</label>
                    </div>
                    <div class="small-9 columns">
                        <input type="text" id="Name" name="Name" placeholder="e.g. John Smith" value="@Model.RegisterModel.Name">
                        @Html.ValidationMessageFor((List<Asafaharbor.Web.Models.ErrorModel>)Model.Page.Errors, "Name")
                    </div>
                </div>
                <div class="row">
                    <div class="small-3 columns">
                        <label for="Email" class="right inline">Email</label>
                    </div>
                    <div class="small-9 columns">
                        <input type="text" id="Email" name="Email" placeholder="e.g. John.Smith@sharklasers.com" value="@Model.RegisterModel.Email">
                        @Html.ValidationMessageFor((List<Asafaharbor.Web.Models.ErrorModel>)Model.Page.Errors, "Email")
                    </div>
                </div>
                <div class="row">
                    <div class="small-3 columns">
                        <label for="UserName" class="right inline">UserName</label>
                    </div>
                    <div class="small-9 columns">
                        <input type="text" id="UserName" name="UserName" placeholder="e.g. johnsmith" value="@Model.RegisterModel.UserName">
                        @Html.ValidationMessageFor((List<Asafaharbor.Web.Models.ErrorModel>)Model.Page.Errors, "UserName")
                    </div>
                </div>
                <div class="row">
                    <div class="small-3 columns">
                        <label for="Password" class="right inline">Password</label>
                    </div>
                    <div class="small-9 columns">
                        <input type="password" id="Password" name="Password">
                        @Html.ValidationMessageFor((List<Asafaharbor.Web.Models.ErrorModel>)Model.Page.Errors, "Password")
                    </div>
                </div>
                <div class="row">
                    <div class="small-3 columns">
                        <label for="ConfirmPassword" class="right inline">Confirm Password</label>
                    </div>
                    <div class="small-9 columns">
                        <input type="password" id="ConfirmPassword" name="ConfirmPassword">
                        @Html.ValidationMessageFor((List<Asafaharbor.Web.Models.ErrorModel>)Model.Page.Errors, "ConfirmPassword")
                    </div>
                </div>
                <div class="row">
                    <div class="small-3 columns">
                        <label for="Website" class="right inline">Website</label>
                    </div>
                    <div class="small-9 columns">
                        <input type="text" id="Website" name="Website" placeholder="e.g. johnsmith.com" value="@Model.RegisterModel.Website">
                        @Html.ValidationMessageFor((List<Asafaharbor.Web.Models.ErrorModel>)Model.Page.Errors, "Website")
                    </div>
                </div>
                <div class="row">
                    <div class="small-9 small-offset-3 columns">
                        <input type="submit" class="small button"/>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>