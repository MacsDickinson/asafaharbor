@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@using Asafaharbor.Web.Models
@{
    Layout = "_Layout.cshtml";
}
    <section class="row">
        <div class="large-7 columns">
            <h2>Projects</h2>
        </div>
        <div class="large-3 columns">
            <a href="Projects/New" class="button">Create Project</a>
        </div>
    </section>
    @if (@Model.Projects.Count > 0)
    {
        foreach (Project project in Model.Projects)
        {
            <div class="row project @project.Status">
                <div class="row">
                    <div class="large-6 columns">
                        <h4>@project.Name</h4>
                    </div>
                    <div class="large-6 columns">
                        <a href="Projects/View/@project.Id.Replace("projects/", "")" class="button right">View</a>
                    </div>
                </div>
                <div class="row">
                    <div class="large-6 columns">
                        Status: @project.Status
                    </div>
                    <div class="large-6 columns">
                        Last Scanned: @if (project.LastScanned != null)
                                      {
                                          @project.LastScanned.ToString()
                                      }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="row">
            <span>
                You have no projects &#9785; Why not <a href="Projects/New">create one</a>?
            </span>
        </div>
    }
