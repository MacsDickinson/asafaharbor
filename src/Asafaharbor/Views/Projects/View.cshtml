@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@using System
@using System.Web
@{
    Layout = "_Layout.cshtml";
}
@if (@Model.Project.ProjectId != new Guid())
{
    <div class="row">
        <div class="small-6 columns">
            <h2>@Model.Project.Name</h2>
        </div>
        <div class="large-3 columns right">
            <a href="../EditSettings/@Model.Project.Id.Replace("projects/", "")" class="button" id="settings_button">Settings</a>
        </div>
    </div>
    <hr />
    <div class="small-8 small-centered">
        @if (@Model.Project.Results == null || @Model.Project.Results.Count == 0)
        {
            <div class="row">
                <div class="small-12 columns">
                    <h4>Getting Started</h4>
                </div>
                <div class="small-12 columns">
                    <span>Your ASafaHarbor service hook is:</span>
                </div>
                <div class="small-12 panel columns">
                    @string.Format("{0}/Scan/{1}/{2}",
                                   HttpContext.Current.Request.Url.Authority, @Model.Project.ProjectId, @Model.Project.Key)
                </div>
            </div>
        }
        else
        {
            foreach (var result in @Model.Project.Results)
            {
                <div class="row">
                    @result.OverallScanStatus
                </div>
            }
        }
    </div>
}