@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@using System.Web
@{
    Layout = "_Layout.cshtml";
}
<h2>@Model.Project.Name</h2>
<div class="small-8 small-centered">
    @if (@Model.Project.Results.Count == 0)
    {
        <div class="row">
            <h4>Getting Started</h4>
            <span>Your ASafaHarbor service hook is:</span>
            <div class="panel">
                @string.Format("{0}/Scan/{1}/{2}",
                                        HttpContext.Current.Request.Url.Authority, @Model.Project.ProjectId, @Model.Project.Key)
            </div>
        </div>
    }
    else
    {
        foreach (var result in @Model.Projects.Results)
        {
            <div class="row">
                @result.Name
            </div>
        }
    }
</div>
